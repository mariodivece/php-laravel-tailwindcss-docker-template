root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false

# JavaScript, TypeScript, CSS files
[*.{js,jsx,ts,tsx,css,scss}]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Shell scripts - explicitly enforce LF
[*.sh]
end_of_line = lf
charset = utf-8

# Environment files
[.env*]
end_of_line = lf
charset = utf-8

# Docker files
[{Dockerfile*,*.dockerfile}]
end_of_line = lf
charset = utf-8

# Configuration files
[*.{conf,config,ini}]
end_of_line = lf
charset = utf-8

# PHP files
[*.php]
end_of_line = lf
charset = utf-8

# SVG files - treat as binary to prevent corruption
[*.svg]
insert_final_newline = false
trim_trailing_whitespace = false
